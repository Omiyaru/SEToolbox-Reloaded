<Window x:Class="SEToolbox.Views.WindowManagePaths"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Script Paths" Height="400" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <TextBox x:Name="NewPathTextBox" Width="371" IsReadOnly="True" Margin="0 0 10 0"/>
            <Button Content="Browse..." Width="87" Click="BrowseButton_Click"/>
            <Button Content="Add" Width="32" Margin="10 0 0 0" Click="AddButton_Click"/>
            <Button Content="Remove" Width="49" Margin="10 0 0 0"  Click="RemoveSelected_Click"/>
        </StackPanel>
        <ListBox x:Name="PathsListBox" Grid.Row="1" SelectionMode="Extended" Height="304" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 3 0">
            <Button Content="OK" Width="75" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="10 0 0 0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
