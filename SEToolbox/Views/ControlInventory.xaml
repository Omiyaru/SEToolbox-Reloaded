<UserControl x:Class="SEToolbox.Views.ControlInventory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:SEToolbox.Converters"
             xmlns:services="clr-namespace:SEToolbox.Services"
             xmlns:controls="clr-namespace:SEToolbox.Controls"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             lex:ResxLocalizationProvider.DefaultAssembly="SEToolbox"
             lex:ResxLocalizationProvider.DefaultDictionary="Resources"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             services:DialogService.IsRegisteredView="True">
    <UserControl.Resources>
        <converters:ResourceToImageConverter x:Key="ResourceToImageConverter" />
        <converters:DDSConverter x:Key="DDSConverter" />
        <converters:EnumToResourceConverter x:Key="EnumToResourceConverter" />
    </UserControl.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel Height="22" HorizontalAlignment="Stretch" />
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <TextBlock ToolTip="{lex:Loc CtlInventoryVolumeTooltip}">
                <Run Text="{Binding TotalVolume, StringFormat='{}{0:N}'}"/>
                <Run Text="/"/>
                <Run Text="{Binding MaxVolume, StringFormat='{}{0:N}'}"/>
                <Run Text=" "/>
                <Run Text="{lex:Loc GlobalSIVolumeLitre}"/>
            </TextBlock>
            <MenuItem Header="{lex:Loc CtlInventoryBtnAdd}" Style="{StaticResource ToolBarTopMenuitem}" Command="{Binding AddItemCommand}">
                <MenuItem.Icon>
                    <Image Width="16" Height="16" Source="{Binding Converter={StaticResource ResourceToImageConverter}, ConverterParameter=add}" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="{lex:Loc CtlInventoryBtnDelete}" Style="{StaticResource ToolBarTopMenuitem}" Command="{Binding DeleteItemCommand}">
                <MenuItem.Icon>
                    <Image Width="16" Height="16" Source="{Binding Converter={StaticResource ResourceToImageConverter}, ConverterParameter=delete}" />
                </MenuItem.Icon>
            </MenuItem>
            <Separator Width="4" HorizontalAlignment="Left" />
        </Menu>
        <Grid>
            <controls:MyDataGrid AutoGenerateColumns="False" ItemsSource="{Binding Items, UpdateSourceTrigger=PropertyChanged}" CanUserDeleteRows="False" CanUserAddRows="False" SelectedItem="{Binding SelectedRow}" CanUserSortColumns="False">
                <DataGrid.InputBindings>
                    <KeyBinding Key="Insert" Command="{Binding AddItemCommand}" />
                    <KeyBinding Key="Delete" Command="{Binding DeleteItemCommand}" />
                </DataGrid.InputBindings>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="{lex:Loc CtlInventoryColIcon}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Width="16" Height="16" Source="{Binding Path=TextureFile, Converter={StaticResource DDSConverter}, ConverterParameter='16,16'}" SnapsToDevicePixels="True" Margin="0,0,2,0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="{lex:Loc CtlInventoryColName}" Binding="{Binding FriendlyName}" IsReadOnly="True" />
                    <DataGridTextColumn Header="{lex:Loc CtlInventoryColMass}" Binding="{Binding Mass, StringFormat='{}{0:#,###0.000}'}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="{lex:Loc CtlInventoryColVolume}" Binding="{Binding Volume, StringFormat='{}{0:#,###0.000}'}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="{lex:Loc CtlInventoryColAmount}" ElementStyle="{StaticResource dataGridCellInError}">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Amount" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True" >
                                <Binding.ValidationRules>
                                    <converters:RangeRuleDec Max="1000000000" Min="0.000001" />
                                </Binding.ValidationRules>
                            </Binding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </controls:MyDataGrid>
        </Grid>
    </DockPanel>
</UserControl>
